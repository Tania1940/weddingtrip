    <style>
        /* Custom Styles */
        body {
            font-family: 'Montserrat', sans-serif;
            color: #212121;
            background-color: #ffffff;
        }
        
        /* Hero Slider Section */
        .hero-slider {
            position: relative;
            height: 100vh;
            overflow: hidden;
        }
        
        .slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }
        
        .slide.active {
            opacity: 1;
        }
        
        /* Overlay */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }
        
        /* Hero Content */
        .hero-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            z-index: 10;
            width: 90%;
            max-width: 800px;
        }
        
        .hero-content h1 {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            color: #ffffff;
        }
        
        .hero-content p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
            color: #ffffff;
        }
        
        /* Custom Navbar */
        .navbar {
            padding: 1rem 2rem;
            transition: all 0.3s ease;
            z-index: 1000;
            background-color: rgba(0, 0, 0, 0.8);
        }
        
        .navbar.scrolled {
            background-color: #000000;
            padding: 0.5rem 2rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }
        
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #f5f405 !important; /* Bright yellow */
        }
        
        .nav-link {
            color: white !important;
            margin: 0 10px;
            position: relative;
            font-weight: 500;
        }
        
        .nav-link:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background-color: #f5f405; /* Bright yellow */
            transition: width 0.3s ease;
        }
        
        .nav-link:hover:after {
            width: 100%;
        }
        
        /* CTA Buttons */
        .btn-cta {
